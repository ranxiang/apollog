<%= form_for(@article, :html => {:class => "form-stacked"}) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :title %>
    <div class="input">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :content %>
    <div class="input">
      <%= f.text_area :content %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :tag_list %>
    <div class="input">
      <%= f.text_field :tag_list %>
    </div>
  </div>
  <div class="field clearfix">
    <%= f.label :status %>
    <div class="input">
      <%= f.select :status, [['Trash', :TRASH], ['Draft', :DRAFT], ['Publish', :PUBLISH]], {}, :class => "medium" %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Save', :class => "btn primary" %>
    <%= link_to('Show', @article, :class => "btn") unless @article.new_record? %>
    <%= link_to 'Back', articles_path, :class => "btn" %>
  </div>
<% end %>
